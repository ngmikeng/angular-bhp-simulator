{
  "name": "bhp-calculator",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "bhp-calculator/src",
  "prefix": "lib",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/angular:ng-packagr-lite",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "bhp-calculator/ng-package.json",
        "tsConfig": "bhp-calculator/tsconfig.lib.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "bhp-calculator/tsconfig.lib.prod.json"
        },
        "development": {}
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/angular:unit-test",
      "options": {}
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
